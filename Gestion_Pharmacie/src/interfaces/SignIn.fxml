<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="340.0" prefWidth="270.0" spacing="10" styleClass="Login_background" stylesheets="@../application/application.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="controllers.SignInController"> 
 <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Sign In" />
    <TextField fx:id="usernameField" promptText="Username" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="validateButton" style="-fx-background-color: green; -fx-text-fill: white;" text="Validate" />
        <Button fx:id="forgotButton" style="-fx-background-color: red; -fx-text-fill: white;" text="Forgot Password" />
    </HBox>
</VBox>
